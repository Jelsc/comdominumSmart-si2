# Django Configuration
DEBUG=1
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=1

# Hosts permitidos (separados por comas)
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Base de datos PostgreSQL
POSTGRES_HOST=db
POSTGRES_DB=condominio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# URLs del frontend para CORS
FRONTEND_URL=http://127.0.0.1:5173
FRONTEND_URL_ALT=http://localhost:5173

# CORS configuration
CORS_ALLOW_ALL_ORIGINS=True

# Google OAuth2 (opcional)
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=

# Redis
REDIS_URL=redis://redis:6379/0

# Email settings (para desarrollo con MailHog)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@condominio.local

# Django Sites Framework
SITE_ID=1

# django-allauth
ACCOUNT_EMAIL_VERIFICATION=mandatory